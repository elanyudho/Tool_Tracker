<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToolTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_dandelion</item>
        <item name="colorPrimaryVariant">@color/yellow_dandelion</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_summer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTabLayoutTextAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>